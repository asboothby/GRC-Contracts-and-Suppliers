        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
gs.addInfoMessage(current.assessment_type);
	var errorString = '';
	// Verify assessments / attestations for selected type are completed
	
	switch (current.assessment_type)
	{
		case 'risk':
			if (!current.assessment_completed) errorString = 'The Risk Assessment must be completed before completing the validation event';
			break;
		case 'compliance':
			if (!current.attestations_completed)  errorString = 'All attestations must be completed before completing the validation event';
			break;
		case 'both':
			if (!current.assessment_completed || !current.attestations_completed) errorString = 'The Risk Assessment and all attestations must be completed before completing the validation event';
			break;
	}
		
	if (errorString != '') 
	{
		gs.addErrorMessage(errorString);
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
