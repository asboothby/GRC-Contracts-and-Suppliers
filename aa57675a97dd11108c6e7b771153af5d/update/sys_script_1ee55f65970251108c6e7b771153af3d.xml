        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Get status value
	var currentStatus = current.cyber_security_self_assessment_rating;
	var queryString = 'cui_suppliersLIKE' + current.sys_id;
	
	// Get contracts to which this supplier is associated
	var grContract = new GlideRecord('x_631631_grc_contr_contract');
	grContract.addEncodedQuery(queryString);
	grContract.query();
	
	while(grContract.next())
	{
		if(currentStatus=='Red' && !grContract.has_red_suppliers)
		{
			grContract.has_red_suppliers = 'true';
			grContract.update();				
		}
		else
		{
			if(grContract.has_red_suppliers)
			{
				var si = new ContractSlfUtilBase();
				var badCount = si.checkBadSuppliers(grContract.sys_id);
				
// 				if(badCount > 0) gs.addErrorMessage(grContract.title + ' has ' + badCount + ' Red Supplier(s)!');
			}
		}
	}

})(current, previous);]]></script>
